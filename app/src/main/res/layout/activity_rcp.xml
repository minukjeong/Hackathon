<?xml version="1.0" encoding="utf-8"?>
    <androidx.appcompat.widget.LinearLayoutCompat
    android:weightSum="100"
    android:orientation="vertical"
    tools:context=".ui.game.RcpActivity"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_gravity="center"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:text="가위바위보에서 이기세요!"/>


    -<androidx.appcompat.widget.LinearLayoutCompat
    android:orientation="vertical"
    android:layout_height="0dp"
    android:layout_width="match_parent"
    android:layout_weight="60">

    <ImageView
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:id="@+id/set_hand_image_view"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_baseline_replay_24"/>

    <ImageView
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:id="@+id/hand_any_image_view"
        android:scaleType="fitCenter"
        android:src="@drawable/hand_any"/>

</androidx.appcompat.widget.LinearLayoutCompat>


    <androidx.appcompat.widget.LinearLayoutCompat
    android:weightSum="100"
    android:orientation="horizontal"
    android:layout_height="0dp"
    android:layout_width="match_parent"
    android:layout_weight="20">

    <ImageButton
        android:layout_height="match_parent"
        android:layout_width="0dp"
        android:layout_weight="25"
        android:id="@+id/rock_button"
        android:scaleType="fitCenter"
        android:src="@drawable/com_rock"
        android:tag="1"
        android:onClick="button_click"
        android:backgroundTint="#ffffff"/>

    <ImageButton android:layout_height="match_parent"
        android:layout_width="0dp"
        android:layout_weight="25"
        android:id="@+id/scissors_button"
        android:scaleType="fitCenter"
        android:src="@drawable/com_scissors"
        android:tag="2"
        android:onClick="button_click"
        android:backgroundTint="#ffffff"/>

    <ImageButton android:layout_height="match_parent"
        android:layout_width="0dp"
        android:layout_weight="25"
        android:id="@+id/paper_button"
        android:scaleType="fitCenter"
        android:src="@drawable/com_paper"
        android:tag="3"
        android:onClick="button_click"
        android:backgroundTint="#ffffff"/>

    <ImageButton android:layout_height="match_parent"
        android:layout_width="0dp"
        android:layout_weight="25"
        android:id="@+id/replay_button"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_baseline_replay_24"
        android:onClick="button_click"
        android:backgroundTint="#ffffff"/>

</androidx.appcompat.widget.LinearLayoutCompat>

</androidx.appcompat.widget.LinearLayoutCompat>